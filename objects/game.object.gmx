v.rotate = true;

var scores = 0;
//scores = 1 -&gt; win
//      = -1 -&gt; lose
//      = 0 -&gt; status quo

// Archer beats warrior
// Warrior beats mage
// Mage beats archer

switch(ds_list_find_value(player_cards, i).value)
{

    case cards.archer:
    {
        scores = ds_list_find_value(oldman_cards, i).value - 1;
        if(scores == 0)
            scores -= 1;
        else if(scores == -1)
            scores += 1;
        break;
    }
    
    case cards.mage:
    {
        scores = ds_list_find_value(oldman_cards, i).value - 1;
        scores = -scores;
        break;
    }
    
    case cards.warrior:
    {
        scores = ds_list_find_value(oldman_cards, i).value - 1;
        if(scores == 1)
            scores = 0;
        else if(scores == 0)
            scores = 1;
        break;
    }
}

winner[i] = scores;

if(winner[i] == -1)
    winner[i] = 2;// 2 is oldman, 1 is player, 0 - noone

i++;
scale = 2;
